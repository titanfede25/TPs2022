         <button onclick="alert('Pista: Es un fusil de asalto semiautomático creado en Estados Unidos siendo uno de los más reconocidos, incluso apareciendo en diversos títulos de videojuegos y películas')"> Pista arma 3 </button>
         <br>
         <br>
          <img src = "~/Imagenes/Spots.png" width="500" height= "auto">
          <br>
        <form method="post" action='@Url.Action("Habitacion","Home")'>
          <h2>Respuesta</h2>
          <input type="text" name="clave" required>
          <input type="hidden" name="sala" value=4>
          <input type="submit" value="Mandar la info">
